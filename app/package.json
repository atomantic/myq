{
  "name": "myq",
  "version": "0.1.0",
  "description": "MyQ: Realtime Queue Manager",
  "main": "index.js",
  "scripts": {
    "setup": "npm i -g nodemon node-sass doctoc pug-cli && npm i",
    "test": "node test",
    "dev": "npm run build && npm-run-all -p -r -l dev:server watch:js watch:html watch:css &; open http://localhost:4112",
    "dev:server": "NODE_ENV=development ./node_modules/.bin/nodemon --debug --watch server server/index.js",
    "deploy": "cd ..;git branch -f gh-pages; git checkout gh-pages; git reset --hard origin/master;cp -r app/public/* .;git add -A .;git commit -a -m 'gh-pages update';git push origin gh-pages --force;git checkout master; cd app",
    "start": "NODE_ENV=production node --harmony server",
    "prebuild": "mkdir -p public/{assets,css,img,js,libs/bootstrap} && cp -R node_modules/bootstrap/dist/* public/libs/bootstrap && cp -R node_modules/animate.css/animate.min.css public/libs/animate.css && cp -R node_modules/font-awesome/css public/libs/fa/ && cp -R node_modules/font-awesome/fonts public/libs/fa/ && cp -R node_modules/font-awesome-animation/dist public/libs/faa",
    "build": "npm-run-all build:js build:html build:css build:assets",
    "build:js": "./node_modules/.bin/webpack --progress --colors",
    "build:css": "./node_modules/.bin/node-sass -i --output-style=compressed client/sass/main.scss public/css/styles.css",
    "build:html": "./node_modules/.bin/pug client/index.pug -o public/",
    "build:assets": "rsync -a client/assets/* public/assets/",
    "watch": "npm-run-all -p -r -l watch:css watch:html watch:js",
    "watch:js": "./node_modules/.bin/webpack --watch --progress --colors",
    "watch:css": "./node_modules/.bin/node-sass --watch -i --output-style=compressed client/sass/main.scss public/css/styles.css",
    "watch:html": "./node_modules/.bin/pug --watch client/index.pug -o public/",
    "postinstall": "npm run build"
  },
  "author": "Adam Eivy",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "async": "2.6.1",
    "blankie": "4.0.0",
    "googleapis": "39.1.0",
    "hapi": "17.5.2",
    "hapi-and-healthy": "6.0.1",
    "inert": "5.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "lodash": "4.17.10",
    "lowdb": "1.0.0",
    "moment": "2.22.2",
    "moment-range": "4.0.1",
    "node-emoji": "1.8.1",
    "request": "2.87.0",
    "scooter": "5.0.0",
    "socket.io": "2.1.1"
  },
  "devDependencies": {
    "animate.css": "3.6.1",
    "bootstrap": "4.1.1",
    "bootstrap-vue": "2.0.0-rc.11",
    "chart.piecelabel.js": "0.11.0",
    "eslint": "5.1.0",
    "font-awesome": "4.7.0",
    "font-awesome-animation": "0.2.1",
    "lodash.sample": "4.2.1",
    "node-sass": "4.9.2",
    "nodemon": "1.18.1",
    "npm-run-all": "4.1.3",
    "pug-cli": "1.0.0-alpha6",
    "vue": "2.5.16",
    "vue-chart": "2.0.0",
    "vue-lazyload": "1.2.6",
    "vue-loader": "15.2.4",
    "webpack": "4.16.0"
  },
  "gh-pages-deploy": {
    "staticpath": "public"
  }
}
